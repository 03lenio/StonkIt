<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectImageActivity">

    <ImageView
        android:id="@+id/editPreset"
        android:layout_width="612dp"
        android:layout_height="621dp"
        android:layout_marginStart="115dp"
        android:layout_marginTop="246dp"
        android:layout_marginEnd="73dp"
        android:layout_marginBottom="413dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/select" />

    <Button
        android:id="@+id/choosePictureBtn"
        android:layout_width="613dp"
        android:layout_height="57dp"
        android:layout_marginStart="115dp"
        android:layout_marginTop="881dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="342dp"
        android:text="@string/choose_picture"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/nextBtn"
        android:layout_width="518dp"
        android:layout_height="57dp"
        android:layout_marginStart="115dp"
        android:layout_marginTop="881dp"
        android:layout_marginEnd="167dp"
        android:layout_marginBottom="342dp"
        android:text="@string/next"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="invisible" />

    <Button
        android:id="@+id/rotateBtn"
        android:layout_width="45dp"
        android:layout_height="57dp"
        android:layout_marginStart="682dp"
        android:layout_marginTop="881dp"
        android:layout_marginEnd="73dp"
        android:layout_marginBottom="342dp"
        android:text="↺"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="invisible" />

    <Button
        android:id="@+id/reselectBtn"
        android:layout_width="49dp"
        android:layout_height="57dp"
        android:layout_marginStart="633dp"
        android:layout_marginTop="881dp"
        android:layout_marginEnd="118dp"
        android:layout_marginBottom="342dp"
        android:text="📁"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="invisible" />
</androidx.constraintlayout.widget.ConstraintLayout>